<!DOCTYPE html>
<html>
  <head>
    <title>Setter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <header>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <% end %>

    <% if logged_in? %>
      <%= current_user.username %>
      <%= button_to "Sign Out", session_url, method: :delete %>
    <% else %>
      <%= button_to "Link to Sign In", new_session_url, method: :get %>
      <%= button_to "Link to Sign Up", new_user_url, method: :get %>
    <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
