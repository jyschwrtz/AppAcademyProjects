<% if action == :edit %>
  <% action_url = cat_url(cat)%>
<% else %>
  <% action_url = cats_url %>
<% end %>

<form action= "<%= action_url %>" method="post">
  <% if cat.persisted?%>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name:</label>
  <input id="name" type="text" name="cats[name]" value=" <%= cat.name %> ">

  <br>

  <label for="sex">Sex: </label>
  <input type="radio" name="cats[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %> > Male
  <input type="radio" name="cats[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %> > Female

  <br>
  <label for="color">Color: </label>
  <select id="color" name="cats[color]">
    <option disabled <%= cat.color ? "" : "selected"  %> >--Please Select--</option>
    <option value="black" <%= cat.color == "black" ? "selected" : "" %>>Black</option>
    <option value="white"<%= cat.color == "white" ? "selected" : "" %> >White</option>
    <option value="brown" <%= cat.color == "brown" ? "selected" : "" %> >Brown</option>
    <option value="red" <%= cat.color == "red" ? "selected" : "" %> >Red</option>
    <option value="blue" <%= cat.color == "blue" ? "selected" : "" %> >Blue</option>
  </select>
  <br>
  <label for="date">Date: </label>
  <input type="date" name="cats[birth_date]" value="<%= cat.birth_date ? cat.birth_date.strftime('%Y-%m-%d') : "" %>">
  <br><br>
  <label for="description">Description: </label><br>
  <textarea name="cats[description]" rows="8" cols="80"><%=cat.description%></textarea>
  <input type="submit" value="<%= action == :edit ? 'update cat' : 'add cat'%>">
</form>
