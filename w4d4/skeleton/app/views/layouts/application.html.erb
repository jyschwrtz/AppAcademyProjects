<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <div class="cat-div">
        <a href="http://thecatapi.com"><img src="http://thecatapi.com/api/images/get?format=src&type=gif"></a>
        <a href="http://thecatapi.com"><img src="http://thecatapi.com/api/images/get?format=src&type=gif"></a>
        <a href="http://thecatapi.com"><img src="http://thecatapi.com/api/images/get?format=src&type=gif"></a>
      </div>
      <br>

      <% if logged_in? %>
        <%= link_to 'Log Out', session_url, method: :delete %>
      <% else %>
        <%= link_to 'Sign In', new_session_url %>
        <%= link_to 'Sign Up', new_user_url %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
